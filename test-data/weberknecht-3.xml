		<post-processors ref="p2" />

		<action name="foo1" class="de.highbyte_le.weberknecht.FooAction" pre="p1">
			<pre-processors ref="p1" />
		</action>
		<action name="bar1" class="de.highbyte_le.weberknecht.BarAction" post="p3">
			<post-processors ref="p3" />
		</action>
		<action name="bar2" class="de.highbyte_le.weberknecht.BarAction" />
