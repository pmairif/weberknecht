		<action name="foo" class="de.highbyte_le.weberknecht.FooAction">
			<pre-processors ref="p1" />
			<post-processors ref="p1" />
		</action>
		<action name="bar" class="de.highbyte_le.weberknecht.BarAction" />
	</area>

	<area name="a1" pre="p2" post="p2">
