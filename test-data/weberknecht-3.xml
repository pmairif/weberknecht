		<post-processor class="de.highbyte_le.weberknecht.PostProcessor1a"/>
		<post-processor class="de.highbyte_le.weberknecht.PostProcessor1b"/>
	</post-processors-def>

	<post-processors-def id="p2">
		<post-processor class="de.highbyte_le.weberknecht.PostProcessor2"/>
	</post-processors-def>

	<post-processors-def id="p3">
		<post-processor class="de.highbyte_le.weberknecht.PostProcessor3"/>
	</post-processors-def>
